@page
@model PrivacyModel
@{
    ViewData["Title"] = "Carrom Board Items";
    <h1>@ViewData["Title"]</h1>
}

<style>

    body {
        font-family: Arial, sans-serif;
        background-color: skyblue;
        margin: 0;
        padding: 0;
    }

    header {
        text-align: center;
        background-color: #333;
        color: white;
        padding: 20px 0;
    }

    h1 {
        margin: 0;
    }

    p {
        margin: 5px 0 20px 0;
        font-size: 18px;
    }

    .products {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
    }

    .product {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 15px;
        padding: 20px;
        text-align: center;
        width: 200px;
        transition: transform 0.3s ease;
    }

        .product:hover {
            transform: translateY(-5px);
        }

        .product img {
            max-width: 100%;
            border-radius: 10px;
        }

        .product h2 {
            font-size: 20px;
            margin: 15px 0;
        }

        .product p {
            color: #555;
        }

    button {
        background-color: #333;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #555;
        }
</style>



<section class="products">
